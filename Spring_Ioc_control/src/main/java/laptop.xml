<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd
            http://www.springframework.org/schema/context
            http://www.springframework.org/schema/context/spring-context-3.0.xsd">
            
            
            <bean id = "mylaptop" class = "org.jsp.constructor_injector.Laptop">
            <constructor-arg name = "ram" value = "12"></constructor-arg>
            <constructor-arg name = "price" value = "75000"></constructor-arg>
            <constructor-arg name = "model" value = "HP Pavilion Plus"></constructor-arg>
            <constructor-arg name = "brand" value = "HP"></constructor-arg>
            </bean>
    

</beans>

